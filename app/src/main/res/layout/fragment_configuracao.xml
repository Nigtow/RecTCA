<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".ConfiguracaoFragment" android:id="@+id/frameLayout">
    <Spinner
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:id="@+id/categoriasseletor" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/categoriastitulo" app:layout_constraintBottom_toTopOf="@+id/dificuldadetitulo"/>
    <TextView
            android:text="Categoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/categoriastitulo"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/categoriasseletor"/>
    <Spinner
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:id="@+id/dificuldadeseletor" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/dificuldadetitulo"/>
    <TextView
            android:text="Dificuldade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dificuldadetitulo"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/categoriasseletor"
            app:layout_constraintBottom_toTopOf="@+id/dificuldadeseletor"/>
</androidx.constraintlayout.widget.ConstraintLayout>